                        <li class="nav-item">
                            <a class="nav-link" href="/suppliers">
                                <i class="fas fa-truck"></i> Quản lý nhà cung cấp
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <% } %>

            <!-- Content Area -->
            <div class="<%= user ? 'col-md-9 ms-sm-auto col-lg-10' : 'col-12' %> px-md-4">
                <!-- Welcome Section -->
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <% if (user) { %>
                            Chào mừng, <%= user.username %>!
                        <% } else { %>
                            Chào mừng đến với hệ thống quản lý sản phẩm
                        <% } %>
                    </h1>
                </div>

                <!-- Search and Filter Section -->
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Tìm kiếm sản phẩm</h5>
                                <form method="GET" action="/">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="search" class="form-label">Tên sản phẩm</label>
                                            <input type="text" class="form-control" id="search" name="search" 
                                                   value="<%= searchQuery %>" placeholder="Nhập tên sản phẩm...">
                                        </div>
                                        <div class="col-md-4">
                                            <label for="supplier" class="form-label">Nhà cung cấp</label>
                                            <select class="form-select" id="supplier" name="supplier">
                                                <option value="">Tất cả nhà cung cấp</option>
                                                <% suppliers.forEach(sup => { %>
                                                <option value="<%= sup._id %>" <%= selectedSupplier == sup._id ? 'selected' : '' %>>
                                                    <%= sup.name %>
                                                </option>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <div class="col-md-4 d-flex align-items-end">
                                            <button type="submit" class="btn btn-primary me-2">
                                                <i class="fas fa-search"></i> Tìm kiếm
                                            </button>
                                            <a href="/" class="btn btn-secondary">
                                                <i class="fas fa-undo"></i> Xóa lọc
                                            </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Products Section -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Danh sách sản phẩm</h5>
                                <% if (user) { %>
                                <a href="/products/create" class="btn btn-success btn-sm">
                                    <i class="fas fa-plus"></i> Thêm sản phẩm
                                </a>
                                <% } %>
                            </div>
                            <div class="card-body">
                                <% if (products.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Tên sản phẩm</th>
                                                <th>Giá</th>
                                                <th>Số lượng</th>
                                                <th>Nhà cung cấp</th>
                                                <th>Ngày tạo</th>
                                                <% if (user) { %>
                                                <th>Thao tác</th>
                                                <% } %>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% products.forEach(product => { %>
                                            <tr>
                                                <td><%= product.name %></td>
                                                <td><%= product.price.toLocaleString('vi-VN') %> VNĐ</td>
                                                <td>
                                                    <span class="badge <%= product.quantity > 0 ? 'bg-success' : 'bg-danger' %>">
                                                        <%= product.quantity %>
                                                    </span>
                                                </td>
                                                <td><%= product.supplier.name %></td>
                                                <td><%= new Date(product.createdAt).toLocaleDateString('vi-VN') %></td>
                                                <% if (user) { %>
                                                <td>
                                                    <a href="/products/<%= product._id %>" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/products/<%= product._id %>/edit" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-danger btn-sm" 
                                                            onclick="deleteProduct('<%= product._id %>')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </td>
                                                <% } %>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Không có sản phẩm nào được tìm thấy.</p>
                                    <% if (user) { %>
                                    <a href="/products/create" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Thêm sản phẩm đầu tiên
                                    </a>
                                    <% } %>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions (chỉ hiển thị khi đã đăng nhập) -->
                <% if (user) { %>
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5 class="card-title">Quản lý sản phẩm</h5>
                                        <p class="card-text">Thêm, sửa, xóa sản phẩm</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-box fa-2x"></i>
                                    </div>
                                </div>
                                <a href="/products" class="btn btn-light btn-sm">
                                    Đi đến quản lý sản phẩm
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5 class="card-title">Quản lý nhà cung cấp</h5>
                                        <p class="card-text">Thêm, sửa, xóa nhà cung cấp</p>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-truck fa-2x"></i>
                                    </div>
                                </div>
                                <a href="/suppliers" class="btn btn-light btn-sm">
                                    Đi đến quản lý nhà cung cấp
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } else { %>
                <!-- Login Prompt for guests -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title">Bạn cần đăng nhập để quản lý sản phẩm và nhà cung cấp</h5>
                                <p class="card-text">Đăng nhập để có thể thêm, sửa, xóa sản phẩm và nhà cung cấp.</p>
                                <a href="/auth/login" class="btn btn-primary me-2">Đăng nhập</a>
                                <a href="/auth/register" class="btn btn-outline-primary">Đăng ký</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    
    <script>
        function deleteProduct(id) {
            if (confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')) {
                fetch(`/products/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra khi xóa sản phẩm');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi xóa sản phẩm');
                });
            }
        }
    </script>
</body>
</html>