<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <body class="bg-light">
        <%- include('../partials/header') %>
        <div class="container py-5">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h2 class="fw-bold text-primary"><i class="fas fa-box"></i> Danh sách sản phẩm</h2>
                </div>
                <div class="col-md-6 text-end">
                    <a href="/products/new" class="btn btn-primary btn-lg shadow-sm"><i class="fas fa-plus"></i> Thêm sản phẩm</a>
                </div>
            </div>
            <form class="row g-2 mb-4" method="GET" action="/products">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="Tìm kiếm sản phẩm..." value="<%= search %>">
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="supplier" class="form-select">
                        <option value="">-- Nhà cung cấp --</option>
                        <% suppliers.forEach(supplier => { %>
                            <option value="<%= supplier._id %>" <%= supplier._id == selectedSupplier ? 'selected' : '' %>><%= supplier.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="category" class="form-select">
                        <option value="">-- Loại sản phẩm --</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category %>" <%= category == selectedCategory ? 'selected' : '' %>><%= category %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100"><i class="fas fa-filter"></i> Lọc</button>
                </div>
            </form>
            <% if (products.length === 0) { %>
                <div class="alert alert-warning text-center">
                    <i class="fas fa-exclamation-circle"></i> Không tìm thấy sản phẩm nào.
                </div>
            <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover align-middle shadow-sm">
                    <thead class="table-primary">
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Nhà cung cấp</th>
                            <th>Loại</th>
                            <th>Giá</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                        <tr>
                            <td class="fw-semibold text-dark"><%= product.name %></td>
                            <td><%= product.supplier ? product.supplier.name : '' %></td>
                            <td><%= product.category %></td>
                            <td class="text-end text-success fw-bold"><%= product.price.toLocaleString() %> đ</td>
                            <td>
                                <a href="/products/<%= product._id %>" class="btn btn-info btn-sm me-1" title="Xem chi tiết"><i class="fas fa-eye"></i></a>
                                <a href="/products/<%= product._id %>/edit" class="btn btn-warning btn-sm me-1" title="Chỉnh sửa"><i class="fas fa-edit"></i></a>
                                <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <% } %>
        </div>
        <%- include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
                                                <% }) %>
                                            </select>
                                        </div>
                                        <div class="col-md-4 d-flex align-items-end">
                                            <button type="submit" class="btn btn-primary me-2">
                                                <i class="fas fa-search"></i> Tìm kiếm
                                            </button>
                                            <a href="/products" class="btn btn-secondary">
                                                <i class="fas fa-undo"></i> Xóa lọc
                                            </a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Products Table -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Danh sách sản phẩm (<%= products.length %> sản phẩm)</h5>
                            </div>
                            <div class="card-body">
                                <% if (products.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>STT</th>
                                                <th>Tên sản phẩm</th>
                                                <th>Giá</th>
                                                <th>Số lượng</th>
                                                <th>Nhà cung cấp</th>
                                                <th>Ngày tạo</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% products.forEach((product, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= product.name %></td>
                                                <td><%= product.price.toLocaleString('vi-VN') %> VNĐ</td>
                                                <td>
                                                    <span class="badge <%= product.quantity > 0 ? 'bg-success' : 'bg-danger' %>">
                                                        <%= product.quantity %>
                                                    </span>
                                                </td>
                                                <td><%= product.supplier.name %></td>
                                                <td><%= new Date(product.createdAt).toLocaleDateString('vi-VN') %></td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/products/<%= product._id %>" class="btn btn-info btn-sm" title="Xem chi tiết">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="/products/<%= product._id %>/edit" class="btn btn-warning btn-sm" title="Chỉnh sửa">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-danger btn-sm" title="Xóa"
                                                                onclick="deleteProduct('<%= product._id %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Không có sản phẩm nào được tìm thấy.</p>
                                    <a href="/products/create" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Thêm sản phẩm đầu tiên
                                    </a>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    
    <script>
        function deleteProduct(id) {
            if (confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')) {
                fetch(`/products/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra khi xóa sản phẩm');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi xóa sản phẩm');
                });
            }
        }
    </script>
</body>
</html>