<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết sản phẩm - <%= product.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header') %>
    <main class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Chi tiết sản phẩm</h4>
                        <a href="/products" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                    <div class="card-body">
                            <div class="row g-4 align-items-center">
                                <div class="col-md-4 text-center">
                                    <div class="bg-light rounded p-4 mb-3">
                                        <i class="fas fa-box fa-4x text-primary mb-2"></i>
                                        <h5 class="mt-2 mb-0 text-truncate"><%= product.name %></h5>
                                        <span class="badge bg-success fs-6 mt-2">
                                            <i class="fas fa-money-bill-wave"></i> <%= product.price.toLocaleString('vi-VN') %> VNĐ
                                        </span>
                                    </div>
                                    <span class="badge <%= product.quantity > 0 ? 'bg-success' : 'bg-danger' %> px-3 py-2 fs-6">
                                        <i class="fas fa-cubes"></i> Số lượng: <%= product.quantity %>
                                    </span>
                                </div>
                                <div class="col-md-8">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><i class="fas fa-truck text-info me-2"></i>Nhà cung cấp:</span>
                                            <% if (product.supplier) { %>
                                                <a href="/suppliers/<%= product.supplier._id %>" class="fw-bold text-decoration-none">
                                                    <%= product.supplier.name %>
                                                </a>

                                            <body class="bg-light">
                                                <%- include('../partials/header') %>
                                                <div class="container py-5">
                                                    <div class="row justify-content-center">
                                                        <div class="col-md-8">
                                                            <div class="card shadow-lg border-0 fade-in">
                                                                <div class="card-header bg-info text-white rounded-top">
                                                                    <h3 class="mb-0"><i class="fas fa-box"></i> Chi tiết sản phẩm</h3>
                                                                </div>
                                                                <div class="card-body">
                                                                    <dl class="row mb-0">
                                                                        <dt class="col-sm-4 fw-bold text-secondary">Tên sản phẩm:</dt>
                                                                        <dd class="col-sm-8 text-dark"><%= product.name %></dd>
                                                                        <dt class="col-sm-4 fw-bold text-secondary">Nhà cung cấp:</dt>
                                                                        <dd class="col-sm-8"><%= product.supplier ? product.supplier.name : '' %></dd>
                                                                        <dt class="col-sm-4 fw-bold text-secondary">Loại sản phẩm:</dt>
                                                                        <dd class="col-sm-8"><%= product.category %></dd>
                                                                        <dt class="col-sm-4 fw-bold text-secondary">Giá:</dt>
                                                                        <dd class="col-sm-8 text-success fw-bold"><%= product.price.toLocaleString() %> đ</dd>
                                                                    </dl>
                                                                    <div class="mt-4 d-flex gap-2">
                                                                        <a href="/products/<%= product._id %>/edit" class="btn btn-warning px-4" title="Chỉnh sửa"><i class="fas fa-edit"></i> Chỉnh sửa</a>
                                                                        <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="d-inline">
                                                                            <button type="submit" class="btn btn-danger px-4" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')"><i class="fas fa-trash"></i> Xóa</button>
                                                                        </form>
                                                                        <a href="/products" class="btn btn-secondary px-4">Quay lại</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <%- include('../partials/footer') %>
                                                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                                            </body>
                                            </html>
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/products';
                    } else {
                        alert('Có lỗi xảy ra khi xóa sản phẩm');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi xóa sản phẩm');
                });
            }
        }
    </script>
</body>
</html>