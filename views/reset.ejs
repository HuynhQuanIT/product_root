<%- include('partials/header') %>
<div class="container" style="max-width:400px;">
  <h2 class="mt-4 mb-3">Reset password</h2>
  <form action="/reset/<%= token %>" method="POST" class="mb-3">
    <div class="mb-3">
      <input name="password" type="password" required class="form-control" placeholder="New password">
    </div>
    <button type="submit" class="btn btn-primary w-100">Reset</button>
  </form>
</div>
<%- include('partials/footer') %>